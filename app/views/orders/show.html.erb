<h1>Order</h1>
<p>Id: <%= @order.oid %></p>
<p>Sum price: <%= @order.amount %></p>
<div><p>Details: </p>
  <table class="table">
    <thead>
    <th>Product</th>
    <th>Count</th>
    <th>Price</th>
    </thead>
    <tbody>
    <% @order.order_details.each do |detail| %>
        <tr>
          <td><%= detail.product.name %></td>
          <td><%= detail.count %></td>
          <td><%= detail.price %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
